{
  "name": "api",
  "version": "0.0.1",
  "description": "Backend service for collecting and serving data for timesheet tracker",
  "author": "Bert Verhelst",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "install-server": "node ./dist/src/install-timesheet-tracker-as-a-windows-service.js",
    "uninstall-server": "node ./dist/src/uninstall-timesheet-tracker-as-a-windows-service.js",
    "dev:api": "nest start --watch",
    "dev:api-bun": "bun ./node_modules/@nestjs/cli/bin/nest.js start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "check-types": "tsc -p ./tsconfig.json --diagnostics",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "bump": "npx bump-package-versions --part=patch --strategy=highest ./package.json ../package.json ../client/package.json",
    "generate-database-types": "rm src/database/db.d.ts && kysely-codegen --camel-case --dialect=sqlite --url=./timesheets-tracker-database.sqlite3 --out-file=./src/database/db.d.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/swagger": "^7.1.6",
    "@paymoapp/active-window": "^1.2.3",
    "@paymoapp/real-idle": "^1.0.5",
    "@types/sql.js": "^1.4.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "nest-winston": "^1.9.4",
    "nested-objects-util": "^1.1.2",
    "node-startup-manager": "^0.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sql.js": "^1.10.3",
    "systray": "^1.0.5",
    "uuid": "^9.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "bump-package-versions": "^1.0.7",
    "jest": "^29.5.0",
    "kysely": "^0.26.1",
    "kysely-codegen": "^0.10.1",
    "open": "8.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
